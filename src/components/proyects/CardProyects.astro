---
interface Props {
    title: string,
    description: string,
    img: string,
    github: string
}

const {title, description, img, github} = Astro.props
---

<div
class="relative flex flex-col rounded-3xl bg-white p-6 gap-3 border-2 border-transparent overflow-hidden row-span-1 col-span-8 dark:bg-raisin-black lg:p-8 lg:row-span-3 xl:col-span-4"
>
<div>
  <div class="flex justify-between mb-3">
    <h3 class="text-2xl font-semibold">{title}</h3>
    <a href={github} target="_blank" >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 512 512"
        class="size-5"
        ><path
          fill="#aeaeaf"
          d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32h82.7L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3V192c0 17.7 14.3 32 32 32s32-14.3 32-32V32c0-17.7-14.3-32-32-32H320zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z"
        ></path></svg
      ></a
    >
  </div>
  <p class="text-base opacity-70 mb-4">{description}</p>
  <img
    src={img}
    alt="Proyect Image"
    class="content-center w-full rounded-2xl object-cover z-[1] lg:-right-12 lg:top-48 -right-0 hover:p-2 transition-all "
  />
</div>
</div>